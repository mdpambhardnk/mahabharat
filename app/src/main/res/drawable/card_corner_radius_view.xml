<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- solids that simulate shadow !-->
    <item>
        <shape>
            <corners android:radius="10dp"></corners>
            <solid android:color="#10CCCCCC" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="10dp"></corners>
            <solid android:color="#20CCCCCC" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="10dp"></corners>
            <solid android:color="#40CCCCCC" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>


    <!-- main background !-->
    <item>
        <shape>
            <corners android:radius="10dp"></corners>
            <solid android:color="#ffffff" />
        </shape>
    </item>


</layer-list>