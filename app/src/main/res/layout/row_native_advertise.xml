<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativenative"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="13dp"
    android:layout_marginVertical="3dp"
    android:background="@drawable/card_view"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imglogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_applogo_notification" />

        <TextView
            android:id="@+id/texttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/imglogo"
            android:layout_toLeftOf="@+id/imgclose"
            android:maxLines="2"
            android:text="Create Your Name Now"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgclose"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:alpha="0.5"
            android:src="@drawable/close"
            android:tint="@color/black" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Create Your Name Now Create Your Name NowCreate Your Name NowCreate Your Name Now"
        android:textColor="@color/gray" />

    <LinearLayout
        android:id="@+id/source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_below="@+id/textdescription"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/adimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="250dp"
            android:background="@drawable/card_corner_radius_view" />
        <ProgressBar
            android:id="@+id/probr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <Button
        android:layout_marginBottom="5dp"
        android:id="@+id/btninstall"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_below="@+id/source"
        android:background="@drawable/btn_round_red"
        android:text="Download Now"
        android:textColor="@color/white" />
</RelativeLayout>
